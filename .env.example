# Copy to .env (do NOT commit .env) and adjust values for your server.

# --- Postgres ---
POSTGRES_DB=sdlp
POSTGRES_USER=sdlp
POSTGRES_PASSWORD=change-me

# --- MinIO ---
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=change-me

# --- Public endpoints (what a browser/user should use) ---
# Frontend will be available on this host/port from the user's browser.
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
S3_PUBLIC_ENDPOINT_URL=http://localhost:9000

# --- Internal endpoints (container-to-container) ---
CORE_INTERNAL_API_BASE_URL=http://backend:8000
S3_ENDPOINT_URL=http://minio:9000
